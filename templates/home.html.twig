{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<p>Accueil</p>
		</li>
	</ol>
	<h1 class="mt-2">Nos produits phares</h1>
	<div class="row mt-4">
		{% for p in products %}
			<div class="col-3">
				<div class="card">
					<img src="{{ p.mainPicture }}" class="img-fluid" alt="Image du produit">
					<div class="card-body">
						<h4 class="card-title">{{ p.name }}
							({{ p.price / 100}}
							€)</h4>
						<span class="badge badge-info">
							<a href="{{ path('product_category', {'slug': p.category.slug})}}">{{ p.category.name }}</a>
						</span>
						<p class="card-text">{{ p.shortDescription }}</p>
						<a href="{{ path('product_show', {'category_slug': p.category.slug, 'slug': p.slug})}}" class="btn btn-primary btn-sm">Détails</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<hr>
	<h2>Un service irréprochable</h2>
	<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Cumque quo dicta in, similique ipsum sed?</p>
	<div class="row">
		{% include "shared/_assurance.html.twig" with {
            'color': 'primary',
            'icone': 'fas fa-truck',
            'text': 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloremque, accusamus excepturi quibusdam et ipsa fuga.'
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color': 'success',
            'icone': 'fas fa-check',
            'text': 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloremque, accusamus excepturi quibusdam et ipsa fuga.'
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color': 'warning',
            'icone': 'fas fa-lock',
            'text': 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloremque, accusamus excepturi quibusdam et ipsa fuga.'
        } %}
	</div>
{% endblock %}
